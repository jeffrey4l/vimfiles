{
    "yank.highlight.enable": false,
    "yaml.completion": true,
    "yaml.format.enable": true,
    "yaml.schemas": {
        "https://json.schemastore.org/ansible-playbook": "config.yml"
    },
    "languageserver": {
        "ccls" : {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
